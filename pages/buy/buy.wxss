.rm {
  display: flex;
  justify-content: space-around;
  margin: 5rpx;
  margin-top: 10rpx;
}

.crm {
  background-color: #ffffff;
  color: balck;
  font-size:25rpx;
}

.crm::after{
  border:0;
}

._crm{
  background-color: #989898;
  color: white;
  font-size: 25rpx;
}

._crm::after{
  border: 0;
}

.line{
width: 100%;
margin-top: 20rpx;
border-top:1px #989898 solid;
}

.orderBlock {
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  margin: 10rpx;
}





.search-list-container {
  background-color: #fff;
  width: 100%;
}

.search-item-container {
  display: flex;
  flex-direction: row;
  height: 25vw;
  margin: 10px;
}

.search-item-title {
  font-size: 16px;
  color: #1b1b1b;
  line-height: 22px;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  flex: 3;
}
.search-item-dates{
  font-size: 12px;
    line-height: 17px;
    height: 17px;
    color: #999;
    
    white-space: nowrap;
    text-overflow: ellipsis;
    margin: 3px 0 4px;
    flex: 1;
}
.search-item-km{
  font-size: 12px;
    line-height: 17px;
    height: 17px;
    color: #999;
    
    white-space: nowrap;
    text-overflow: ellipsis;
    margin: 3px 0 4px;
    flex: 1;
}
.search-item-price{
  display: flex;
  flex-direction: row;
  flex: 1;
  
    line-height: 20px;
    height: 20px;
   
    
    margin: 3px 0 4px;
    
}
.textback{
  font-size: 12px;
    
  color: #999;
  
}
.price{
  font-size: 15px;
    font-weight: 700;
    color: #fd521d;
    line-height: 21px;
    display: block;
    height: 21px;
}