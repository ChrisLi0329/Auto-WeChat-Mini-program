}

.Rline{
width: 40%;
margin-top: 20rpx;
border-top:1px #989898 solid;

}

.tbText {
  color:#989898;
  font-size: 30rpx;
  
}

.type {
  display: flex; flex-flow: row;
  justify-content: space-around;
  margin: 5rpx;
  margin-top: 30rpx;
}

.ctype {
  background-color: #ffffff;
  color: balck;
  font-size:25rpx;

}

.ctype::after {
  border: 0;
}

._ctype{
  background-color: #989898;
  color: white;
