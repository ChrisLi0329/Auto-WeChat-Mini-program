/* pages/new_detail/new_detail.wxss */

.swiper-container{
  width: 100%;
  position: relative;
  
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 466rpx;
}

.swiper_box {
  width: 100%;
  height: 466rpx;
  align-items: center;
}

.car_info_box {
  width: 100%;
  background-color: #fff;
}

.car_info_title {
  display: flex;
  flex-direction: row;
  
  
}

.personal_info_box{
  width: 100%;
  background-color: #fff;
}
.personal_info_title{
  display:flex;
  flex-direction: row;
}

.personal_info{
  width: 100%;
  
  font-size: 15px;
  color: #757f89;
}

.name{
  padding: 10px;
  padding-left: 40px;
}
.number{
  padding: 10px;
  padding-left: 40px;
}

.more_info_title{
  display:flex;
  flex-direction: row;
}

.title_label {
  background:black;
  width: 5px;
}

.title_info {
  font-size: 18px;
  font-weight: 500;
  color: #333;
  padding: 20px;
}

.car_info {
  display: flex;
  flex-direction: row;
  padding-bottom: 20px;
  
}

.moreInfo{
  display: inline-block;
  padding:20px;
  
  padding-bottom: 50px;
}

.car_info_item_box {
  flex: 1;
  text-align: center;
  border-right: 1px dashed #757f89;
}

.car_info_item_box1{
  flex: 1;
  text-align: center;
}

.car_info_item_content{
  padding-top: 10px;
  padding-bottom: 10px;
}

.car_detail {
  background-color: #fff;
  display: flex;
  padding-top: 16px;
  padding-left: 20px;
  padding-right: 20px;
  flex-direction: column;
}

.car_detail_head {
  line-height: 27px;
  font-size: 20px;
  color: #1b1b1b;
  padding-bottom: 20px;
  font-weight: 500;
  font-family: "Hiragino Sans GB",
                 "Microsoft Yahei UI",
                 "Microsoft Yahei",
                 微软雅黑,
                 "Segoe UI",
                 Tahoma,
                 宋体b8b体,
                 SimSun,
                 sans-serif;
}

.wan {
  color: #989898;
  font-size: 14px;
  line-height: 14px;
}

.car_price_box{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.newdp{
  color:#abafb3;
  font-size: 14px;
  height: 14px;
  text-decoration: line-through;
  flex: 1;
}

.car_price {
  color: #f85d00;
  font-size: 30px;
  flex: 1;
}

.content-text {
  font-size: 18px;
  color: #666;
  margin-left: 10px;
  margin-right: 30px;
  padding-bottom: 100rpx;
  width: 80%;
  
}

.footer-box {
  width: 100%;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  display: flex;
}

.footer-box .footer-button {
  flex: 1;
}

.footer-box .contact-btn {
  border-radius: 0rpx;
  text-align: center;
  height: 100%;
  line-height: 100rpx;
  background-color: #008000;
  color: #fff;
  font-size: 35rpx;
}
.footer-box .share-btn{
  border-radius: 0rpx;
  text-align: center;
  height: 100%;
  line-height: 100rpx;
  background-color: #fff;
  color:#000;
  font-size: 35rpx;
}

.liulan{
  padding: 20px;
  padding-bottom: 100px;
  font-size: 15px;
  color: #757f89;
}